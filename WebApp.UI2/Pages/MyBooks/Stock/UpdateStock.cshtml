@page
@model WebApp.UI2.Pages.MyBooks.Stock.UpdateStockModel
@{
    var userId = User.Claims.FirstOrDefault(x => x.Type == "AcessToken").Value;
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Update Stock</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/MyBooks/CurrentStock/index">Product</a></li>
                        <li class="breadcrumb-item active">Update Product</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content-header -->

    <section class="content">
        <div class="container-fluid">
            <!-- SELECT2 EXAMPLE -->
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Update Product</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <form method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="Input.Id" id="StockId" />
                                <input type="hidden" value="@userId" id="userId" />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="mb-3 row">
                                    <label class="col-sm-2 col-form-label"> Quantity</label>
                                    <div class="col-sm-6">
                                        <input asp-for="Input.Quantity" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Input.Quantity" class="text-danger"></span>
                                </div>
                                <div class="mb-3 row">
                                    <label asp-for="Input.Name" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-6">
                                        <input asp-for="Input.Name" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>

                            </form>
                        </div>

                    </div>
                    <!-- /.row -->


                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button onclick="UpdateProduct(event)" class="btn btn-info float-right" style="margin-left:20px">Update</button>
                    <button type="submit" class="btn btn-default float-right">Cancel</button>
                </div>
            </div>
            <!-- /.card -->

        </div>
        <!-- /.container-fluid -->


    </section>

</div>

@section scripts{
    @*<script src="~/js/product.js"></script>*@
    <script>
       var apiUrl = '@Model.ApiUrl';

        function UpdateProduct(e) {
           // let confirmAction = confirm("Are you sure to delete this product?");
            performPostRequest(e);
        }

        var updateStockRequest = {
            id: "3fa85f64-5717-4562-b3fc-2c963f66afa6",
            name: "f1",
            quantity: 0,
        };
        function performPostRequest(e) {
            let userId = document.getElementById('userId');
            let stockId = document.getElementById('StockId').value;
            let name = document.getElementById('Input_Name').value;
            let quantity = document.getElementById('Input_Quantity').value;
            updateStockRequest.name = name;
            updateStockRequest.id = stockId;
            updateStockRequest.quantity = quantity;
            let userAccessToken = userId.value;
            console.log(this.updateStockRequest);

            axios.put(`${apiUrl}/api/Stocks/UpdateStock`, this.updateStockRequest, {
                headers: {
                    Authorization: "Bearer " + userAccessToken
                }
            })
                 .then(function (response) {
                     console.log(response);
                     if (response.data.success) {
                         toastr.success(response.data.description)
                         window.location.href = '/MyBooks/Stock/CurrentStock'
                     } else {
                         toastr.error(response.data.description)
                     }
                })
                .catch(function (error) {
                    console.log(error);
                    toastr.error('Some Error Occur!!')
                });
            e.preventDefault();
        }
    </script>
}