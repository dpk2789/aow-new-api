@page
@model WebApp.UI2.Pages.MyBooks.FinancialYear.IndexModel


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Financial Year </h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Financial Year</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <a class="btn btn-success" asp-page="/MyBooks/FinancialYear/Add">Add New FinancialYear</a>


    <div id="product-main">
        <table class="table">
            <tr>              
                <th>Name</th>
                <th>Start</th>
                <th>End</th>
                <th></th>
            </tr>
            <tbody>
                @foreach (var company in Model.FinancialYears)
                {
                    <tr>                      
                        <td>
                            @Html.DisplayFor(modelItem => company.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => company.Start)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => company.End)
                        </td>
                        <td>
                            <a asp-route-id="@company.Id" asp-page="/Companies/Edit" class="fa fa-edit">Edit</a> |
                            <button onclick="confirmAction(event)" data-product-id="@company.Id" type="button" class="btn-danger small">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>