        success: function (res) {
           var html = res;
                var el = document.getElementById('resultTable');
                el.outerHTML = html;
                console.log(res);
        },
        error: function (exception) {
            //alert('Exeption:' + exception);
        }
    });
    e.preventDefault();

    });

    $(document)
        .ready(function () {
            $("#btnclear")
                .click(function () {
                    $("#ViolationCategories").val("");
                    $("#Countries").val("");
