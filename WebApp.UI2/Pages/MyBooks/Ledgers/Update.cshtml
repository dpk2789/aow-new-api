@page
@model WebApp.UI2.Pages.MyBooks.Ledgers.UpdateModel
@{
    var userId = User.Claims.FirstOrDefault(x => x.Type == "AcessToken").Value;
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Update Ledger Form</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/MyBooks/Ledgers/index">Ledgers</a></li>
                        <li class="breadcrumb-item active">Update Ledger</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content-header -->

    <section class="content">
        <div class="container-fluid">
            <!-- SELECT2 EXAMPLE -->
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Update Ledger</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <form method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="Input.Id" id="ledgerId" />
                                <input type="hidden" value="@userId" id="userId" />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="mb-3 row">
                                    <label class="col-sm-2 col-form-label">Select Category</label>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("CategoryId", Model.Input.LedgerCategorySelectList, "-Select Category-", new { id = "CategoryId", @class = "form-control" })

                                    </div>
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>
                                <div class="mb-3 row">
                                    <label asp-for="Input.Name" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-6">
                                        <input asp-for="Input.Name" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>

                                <div class="mb-3 row">
                                    <label for="inputAddress" class="col-sm-2 col-form-label">Address Line1</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" asp-for="Input.AddressLine1" id="inputAddress" placeholder="Line1">
                                    </div>
                                    <span asp-validation-for="Input.AddressLine1" class="text-danger"></span>
                                </div>
                                <div class="mb-3 row">
                                    <label for="inputAddress" class="col-sm-2 col-form-label">Address Line2</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" asp-for="Input.AddressLine2" id="inputAddress2" placeholder="Line 2">
                                    </div>
                                    <span asp-validation-for="Input.AddressLine2" class="text-danger"></span>
                                </div>
                                <div class="mb-3 row">
                                    <label for="inputAddress" class="col-sm-2 col-form-label">City</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" asp-for="Input.City"  id="inputCity" placeholder="City">
                                    </div>
                                    <span asp-validation-for="Input.City" class="text-danger"></span>
                                </div>
                                <div class="mb-3 row">
                                    <label for="inputAddress" class="col-sm-2 col-form-label">State</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" asp-for="Input.State" id="inputState" placeholder="State">
                                    </div>
                                    <span asp-validation-for="Input.State" class="text-danger"></span>
                                </div>
                                <div class="mb-3 row">
                                    <label for="inputAddress" class="col-sm-2 col-form-label">Country</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" asp-for="Input.Country" id="inputCountry" placeholder="Country">
                                    </div>
                                    <span asp-validation-for="Input.Country" class="text-danger"></span>
                                </div>
                                <div class="mb-3 row">
                                    <label for="inputAddress" class="col-sm-2 col-form-label">Pin Code</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" id="inputZipCode" asp-for="Input.ZipCode" placeholder="Pin Code/Zip Code">
                                    </div>
                                    <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
                                </div>
                                <div class="mb-3 row">
                                    <label for="inputAddress" class="col-sm-2 col-form-label">Registered Tax Number</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" id="inputRegTaxNumber" asp-for="Input.RegTaxNumber" placeholder="Reg Tax Number">
                                    </div>
                                    <span asp-validation-for="Input.RegTaxNumber" class="text-danger"></span>
                                </div>
                            </form>

                        </div>

                    </div>
                    <!-- /.row -->


                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button onclick="UpdateLedger(event)" class="btn btn-info float-right" style="margin-left:20px">Update</button>
                    <button type="submit" class="btn btn-default float-right">Cancel</button>
                </div>
            </div>
            <!-- /.card -->

        </div>
        <!-- /.container-fluid -->


    </section>

</div>


@section scripts{
    @*<script src="~/js/product.js"></script>*@
<script>
    var apiUrl = '@Model.ApiUrl';

     function UpdateLedger(e) {
        // let confirmAction = confirm("Are you sure to delete this product?");
         performPostRequest(e);
     }

     var updateLedgerRequest = {
         id: "3fa85f64-5717-4562-b3fc-2c963f66afa6",
         name: "f1",
         ledgerCategoryId: "3fa85f64-5717-4562-b3fc-2c963f66afa6",
         regTaxNumber: "string",
          panNumber: "string",
          addressLine1: "string",
         addressLine2: "string",
          city: "string",
          state: "string",
          country: "string",
          zipCode: "string",
     };
     function performPostRequest(e) {
         let userId = document.getElementById('userId');
         let ledgerId = document.getElementById('ledgerId').value;
         let ledgerName = document.getElementById('Input_Name').value;
         let categoryId = document.getElementById('CategoryId').value;
          let inputAddress = document.getElementById('inputAddress').value;
           let inputAddress2 = document.getElementById('inputAddress2').value;
            let inputCity = document.getElementById('inputCity').value;
           let inputState = document.getElementById('inputState').value;
            let inputCountry = document.getElementById('inputCountry').value;
             let inputZipCode = document.getElementById('inputZipCode').value;
              let inputRegTaxNumber = document.getElementById('inputRegTaxNumber').value;
         updateLedgerRequest.name = ledgerName;
         updateLedgerRequest.id = ledgerId;
         updateLedgerRequest.ledgerCategoryId = categoryId;
          updateLedgerRequest.addressLine1 = inputAddress;
          updateLedgerRequest.addressLine2 = inputAddress2;
         updateLedgerRequest.city = inputCity;
          updateLedgerRequest.state = inputState;
         updateLedgerRequest.country = inputCountry;
          updateLedgerRequest.zipCode = inputZipCode;
          updateLedgerRequest.regTaxNumber = inputRegTaxNumber;
         let userAccessToken = userId.value;
         console.log(this.updateLedgerRequest);

         axios.put(`${apiUrl}/api/Ledger/UpdateLedger`, this.updateLedgerRequest, {
             headers: {
                 Authorization: "Bearer " + userAccessToken
             }
         })
              .then(function (response) {
                  console.log(response);
                  if (response.data.success) {
                      toastr.success(response.data.description)
                      window.location.href = '/MyBooks/Ledgers/index'
                  } else {
                      toastr.error(response.data.description)
                  }
             })
             .catch(function (error) {
                 console.log(error);
                 toastr.error('Some Error Occur!!')
             });
         e.preventDefault();
     }
</script>
}