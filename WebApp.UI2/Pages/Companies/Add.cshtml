@page
@model WebApp.UI2.Pages.Companies.AddModel
@{
}
<form method="post" enctype="multipart/form-data">
    <h4>Add New Company</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3 row">
        <label asp-for="Input.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <input asp-for="Input.Name" class="form-control" />
        </div>
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="Input.TaxType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <select class="form-control" id="TaxTypeId" name="Input.TaxType">
                <option>Select</option>
                <option value="GST">GST</option>
                <option value="VAT">VAT</option>
            </select>
        </div>
        <span asp-validation-for="Input.TaxType" class="text-danger"></span>
    </div>


    <div class="d-grid gap-2 d-md-flex offset-6">
        <button class="btn btn-primary me-md-2" type="button">Cancel</button>
        <button type="submit" class="btn btn-success" style="margin-left:20px">Save</button>
    </div>

</form>


