@model IEnumerable<WebApp.UI2.Pages.MyBooks.LedgerCategories.IndexModel.LedgerCategoriesViewModel>

<div id="resultTable">
    <table id="ledgerCategoryTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => category.Name)
                    </td>

                    <td>
                        <a asp-route-id="@category.Id" asp-page="/MyBooks/LedgerCategories/Update" class="fa fa-edit">Edit</a> |
                        <button onclick="confirmAction(event)" data-category-id="@category.Id" type="button" class="btn-danger small">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
